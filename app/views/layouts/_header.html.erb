<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("tms49"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("views.header.home"), root_path %></li>
        <li><%= link_to t("views.help"), help_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to t("header.users"), "#" %></li>
          <li><%= link_to t("header.course"), courses_path %></li>
          <% if current_user.admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t "views.header.admin" %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("views.header.course"),
                  admin_courses_path %></li>
                <li><%= link_to t("views.header.subjects"), admin_subjects_path %></li>
              </ul>
            </li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "views.header.user" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("views.header.profile"), "#" %></li>
              <li><%= link_to t("views.header.setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("views.header.signout"), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
